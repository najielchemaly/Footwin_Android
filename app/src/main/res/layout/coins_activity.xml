<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:background="@drawable/coins_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/coin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Total coins"
                    android:textAllCaps="true"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/medium_text2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCoinsTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="true"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="140dp"
                android:layout_height="140dp">

                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:foregroundStrokeColor="@color/appBlue"
                    app:backgroundStrokeColor="@color/lightText"
                    app:backgroundStrokeWidth="8dp"
                    app:foregroundStrokeWidth="8dp"
                    app:drawBackgroundStroke="true"
                    app:foregroundStrokeCap="round"
                    app:indeterminate="false"
                    app:progressAnimationDuration="100"
                    app:startAngle="270"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/winning_coin" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="your winning coins"
                        android:textAllCaps="true"
                        android:textColor="@color/darkText"
                        android:textSize="@dimen/medium_text"
                        android:textStyle="bold"
                        android:lines="2"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/txtWinningCoinsTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/appBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="collect"
                    android:textAllCaps="true"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/medium_text2" />

                <TextView
                    android:id="@+id/txtNextRoundCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/appBlue"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to advance to the next round"
                    android:textAllCaps="true"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/medium_text2"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:padding="30dp"
                android:src="@drawable/multiple_coins" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:layout_marginStart="@dimen/app_margin"
                android:gravity="center"
                android:text="Almost out of coins ? \n We can help you with that"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginTop="-10dp"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGetCoins"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/white"
                android:text="get coins now"
                android:textAllCaps="true"
                android:textColor="@color/appBlue"
                app:layout_constraintBottom_toTopOf="@+id/btnClose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnWatchVideo"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/app_margin"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/darkBlue"
                android:text="Watch video"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/btnClose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/darkBlue"
        android:text="close"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text2" />

    <RelativeLayout
      android:id="@+id/viewBlackOpacity"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
       android:visibility="gone"
      android:background="@color/blackOpacityNew"
      >

      <android.support.v7.widget.RecyclerView
          android:layout_marginTop="4dp"
          android:id="@+id/listPackages"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:paddingLeft="@dimen/app_margin"
          android:paddingRight="@dimen/app_margin"
          android:clipToPadding="false" />

       <Button
           android:id="@+id/btnClosePackages"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:textAllCaps="true"
           android:textColor="@color/white"
           android:textSize="@dimen/medium_text2"
           android:textStyle="bold"
           android:text="close"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           />

  </RelativeLayout>

</RelativeLayout>