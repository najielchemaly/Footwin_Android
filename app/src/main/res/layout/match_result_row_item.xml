<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        >

        <RelativeLayout
            android:id="@+id/viewMatch"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@color/blackOpacity">

            <LinearLayout
                android:id="@+id/viewWinning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                >
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/winning_coin"
                    android:background="@android:color/transparent"
                    android:paddingBottom="3dp"
                    />

                <TextView
                    android:id="@+id/txtWinningCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+250"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewHomeTeam"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgHomeTeam"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:padding="3dp"
                    android:src="@drawable/brazil"
                    />

                <TextView
                    android:id="@+id/txtHomeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="germany"
                    android:textAllCaps="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewScore"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/app_margin"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/viewHomeTeam"
                >

                <TextView
                    android:id="@+id/txtScoreHome"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlarge_text" />

                <TextView
                    android:id="@+id/txtScoreSep"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlarge_text" />

                <LinearLayout
                    android:id="@+id/viewConfirm"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:clickable="true"
                    android:visibility="visible"
                    android:alpha="1"
                    android:orientation="vertical"
                    android:background="@drawable/circle_shape_green"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/checked_blue"
                        android:scaleType="centerCrop"
                        android:tint="@color/white"
                        android:padding="6dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="@dimen/xsmall_text"
                        android:textStyle="bold"
                        android:text="confirmed"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtScoreAway"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="true"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlarge_text" />

            </LinearLayout>

            <Button
                android:id="@+id/btnDraw"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/retangle_white_border"
                android:layout_below="@+id/viewScore"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="draw"
                />

            <LinearLayout
                android:id="@+id/viewAwayTeam"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAwayTeam"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:padding="3dp"
                    android:src="@drawable/germany"
                    />

                <TextView
                    android:id="@+id/txtAwayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="germany"
                    android:textAllCaps="true"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/viewMatch"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/time_remaining_background">

            <TextView
                android:id="@+id/txtHeaderTite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="5dp"
                android:text="time remaining"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/txtHeaderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/small_text"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="2 h 36 mins 23 sec"
                android:textAllCaps="true"
                />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>