<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="45dp"
        >

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/darkBlue"
            />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkText"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginTop="@dimen/app_margin"
            android:textSize="@dimen/small_text"
            android:text="11 april 2017"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:textSize="@dimen/large_text"
            android:textColor="@color/appBlue"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Miranda hoping his time would come and win the world cup"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightText"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="dsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsaddsadasdsad"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/darkText"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/darkBlue"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        android:textAllCaps="true"
        android:text="close"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>