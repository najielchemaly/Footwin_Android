<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:animateLayoutChanges="true">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:theme="@style/NavigationDrawerStyle"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/tab_selector"
        app:itemTextColor="@drawable/tab_selector"
        app:menu="@menu/tab_bar" />

    <RelativeLayout
        android:id="@+id/viewTutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackOpacityNew"
        android:layout_above="@+id/bottom_navigation"
        >

        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/viewToDismiss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            app:realtimeBlurRadius="20dp"
            app:realtimeOverlayColor="#88707070" />

        <RelativeLayout
            android:id="@+id/viewWelcome"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/txtTutorialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="welcome!"
                android:textColor="@color/appBlue"
                android:textSize="@dimen/xlarge_text"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                />

            <TextView
                android:id="@+id/txtTutorialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin"
                android:text="hello messi you are signed in to you account.
this is your main prediction screen, we will now show you a few steps to help you get started!"
                android:textAllCaps="true"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/appBlue"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_below="@+id/txtTutorialTitle"
                />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/appBlue"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:text="start the tutorial"
                android:textSize="@dimen/medium_text"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSteps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/viewNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:src="@drawable/tab_profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgArrowNotification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_helper"
                    android:rotation="180"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewCoins"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_alignParentRight="true"
                >

                <ImageView
                    android:id="@+id/imgArrowCoins"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_helper"
                    android:rotation="0"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:layout_marginLeft="5dp"
                    />

                <ImageView
                    android:id="@+id/imgCoins"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coin" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewRules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewCoins"
                >

                <ImageView
                    android:id="@+id/imgArrowRules"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_helper"
                    android:rotation="0"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/txtRules"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:text="view rules"
                    android:textAllCaps="true"
                    android:gravity="right|center"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/viewCoins"
                android:layout_marginLeft="@dimen/app_margin"
                >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/app_margin"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:gravity="center"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgHomeTeam"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:padding="3dp"
                        android:src="@drawable/brazil"
                        />

                    <TextView
                        android:id="@+id/txtHomeTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/white"
                        android:text="Brazil"
                        android:textAllCaps="true"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_helper"
                    android:rotation="180"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewTutorialText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/txtTutorialInTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/xlarge_text"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Notifications"
                    />

                <TextView
                    android:id="@+id/txtTutorialInDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="Tap your image in top to access your notifications"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewExactScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_below="@+id/viewTutorialText"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_helper"
                    android:rotation="90"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/app_margin"
                    android:layout_below="@+id/btnDraw"
                    android:background="@color/darkBlue"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:text="predict the exact score"
                        android:textAllCaps="true"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_down"
                        android:scaleType="centerCrop"
                        android:padding="6dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnNextStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:text="Next Step"
                android:textSize="@dimen/medium_text"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>