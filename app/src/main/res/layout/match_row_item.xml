<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        >

        <RelativeLayout
            android:id="@+id/viewMatch"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:background="@color/blackOpacity">

            <LinearLayout
                android:id="@+id/viewMatchHome"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:padding="1dp"
                    android:background="@drawable/selected_team_background"
                    />

                <TextView
                    android:id="@+id/txtHomeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="germany"
                    android:textAllCaps="true"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgVS"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/vs"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/viewMatchHome"
                />

            <Button
                android:id="@+id/btnDraw"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/retangle_white_border"
                android:layout_below="@+id/imgVS"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="draw"
                />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:padding="1dp"
                    android:background="@drawable/selected_team_background"
                    />

                <TextView
                    android:id="@+id/txtAwayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="germany"
                    android:textAllCaps="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_below="@+id/btnDraw"
                android:background="@color/darkBlueOpacity"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="predict the exact score"
                    android:textAllCaps="true"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_down"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/viewMatch"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/time_remaining_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="5dp"
                android:text="time remaining"
                android:textAllCaps="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/small_text"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="2 h 36 mins 23 sec"
                android:textAllCaps="true"
                />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>