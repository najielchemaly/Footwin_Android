<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:src="@drawable/tab_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle_shape_white"/>

    <RelativeLayout
        android:id="@+id/viewNotificationTag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/circle_shape_red"
        app:layout_constraintStart_toStartOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile">

        <TextView
            android:id="@+id/txtNotificationTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLength="2"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgCoins"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="@dimen/app_margin"
        android:padding="2dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCoinsTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Total"
        android:textSize="@dimen/small_text"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imgCoins"
        app:layout_constraintTop_toTopOf="@+id/imgCoins" />

    <TextView
        android:id="@+id/txtCoinsTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lblCoinsTotal"
        app:layout_constraintTop_toBottomOf="@+id/lblCoinsTotal" />

    <ImageView
        android:id="@+id/imgWinningCoins"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="@dimen/app_margin"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/winning_coin"
        app:layout_constraintEnd_toStartOf="@+id/lblCoinsTotal"
        app:layout_constraintTop_toTopOf="@+id/imgCoins" />

    <TextView
        android:id="@+id/lblWinningCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Winning"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toStartOf="@+id/imgWinningCoins"
        app:layout_constraintTop_toTopOf="@+id/imgWinningCoins" />

    <TextView
        android:id="@+id/txtWinningCoinsTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lblWinningCoins"
        app:layout_constraintTop_toBottomOf="@+id/lblWinningCoins" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="30dp"
        android:alpha="0.2"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWinningCoins" />

    <TextView
        android:id="@+id/txtRound"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="110dp"
        android:gravity="center"
        android:text="Round 1"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnRules"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/app_margin"
        android:background="@android:color/transparent"
        android:text="view rules"
        android:textAllCaps="true"
        android:gravity="right|center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRound" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/app_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRules">

        <ListView
            android:id="@+id/listMatches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:SpinKit_Color="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/viewExactScoreParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackOpacityNew"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/viewExactScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/appBlue">

            <TextView
                android:id="@+id/txtPreditct"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin"
                android:lines="2"
                android:text="predict the exact score"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/xlarge_text"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/viewHomeTeam"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txtPreditct"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgHomeTeam"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="1dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txtHomeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="germany"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewAwayTeam"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtPreditct"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAwayTeam"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="1dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txtAwayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="germany"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignTop="@id/viewHomeTeam"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtHomeScore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_shape"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="2"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/large_text2"
                    android:textStyle="bold"
                    android:hint="0"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vs" />

                <EditText
                    android:id="@+id/txtAwayScore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_shape"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="2"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/large_text2"
                    android:textStyle="bold"
                    android:hint="0"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/viewHomeTeam"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:text="confirm"
                android:textAllCaps="true"
                android:textColor="@color/appBlue"
                android:textSize="@dimen/large_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnConfirm"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:text="cancel"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>