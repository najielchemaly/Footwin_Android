<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/app_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:padding="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/app_margin">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/notification_new"
                android:scaleType="centerCrop"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightText"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:text="1 HR AGO"
                android:textSize="@dimen/xsmall_text"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDate"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/app_margin"
                android:textColor="@color/darkText"
                android:textSize="@dimen/medium_text"
                android:layout_marginRight="@dimen/app_margin"
                />

            <Button
                android:id="@+id/btnCoins"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtNotification"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:background="@color/appBlue"
                android:text="get coins"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin"
                />

            <RelativeLayout
                android:id="@+id/viewResults"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginBottom="@dimen/app_margin"
                android:background="@drawable/retangle_blue_border"
                android:layout_below="@+id/txtNotification"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/selected_team_background"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appBlue"
                        android:textSize="@dimen/xsmall_text"
                        android:text="germany"
                        android:textAllCaps="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewAwayTeam"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/selected_team_background"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appBlue"
                        android:textSize="@dimen/xsmall_text"
                        android:text="germany"
                        android:textAllCaps="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/large_text"
                        android:textColor="@color/appBlue"
                        android:textStyle="bold"
                        android:text="2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appBlue"
                        android:text="-"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/large_text"
                        android:textColor="@color/appBlue"
                        android:textStyle="bold"
                        android:layout_gravity="center|right"
                        android:text="2"
                        />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>