<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_blue">

    <TextView
        android:id="@+id/lblStep3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Step 3"
        android:textSize="@dimen/large_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        />

    <TextView
        android:id="@+id/lblSetYourPic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Set your profile picture"
        android:textAllCaps="true"
        android:layout_below="@+id/lblStep3"
        android:textSize="@dimen/xlarge_text"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/app_margin"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@android:color/transparent"
        android:text="cancel"
        android:textColor="@color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAddImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/add_image"
        />

    <ImageView
        android:id="@+id/imgCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgAddImage"
        android:layout_marginTop="-45dp"
        android:src="@drawable/camera"
        />

    <RelativeLayout
        android:id="@+id/viewContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/appBlue"
            android:textAllCaps="true"
            android:textSize="@dimen/large_text"
            android:text="let's start"
            android:layout_marginLeft="@dimen/app_margin"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logout_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin"
            android:tint="@color/appBlue"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:gravity="center|left"
        android:text="go back"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text" />

    <RelativeLayout
        android:id="@+id/viewLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackOpacityNew"
        android:clickable="true"
        android:visibility="gone"
        >
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Circle"
            app:SpinKit_Color="@color/appBlue"
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </RelativeLayout>

</RelativeLayout>