<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/forgot_password_background">

    <TextView
        android:id="@+id/txtMyPredictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/xlarge_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="My Predictions"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        />
    
    <ListView
        android:id="@+id/listPredictions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtMyPredictions"
        android:layout_marginBottom="45dp"/>
    
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkBlue"
        android:text="close"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        android:textAllCaps="true"
        />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        app:SpinKit_Color="@color/appBlue"
        android:layout_centerInParent="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <RelativeLayout
        android:id="@+id/viewNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtMyPredictions"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="@dimen/app_margin"
        android:visibility="gone"
        />

</RelativeLayout>