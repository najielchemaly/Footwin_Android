<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2"
        android:textSize="@dimen/large_text"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        />

    <TextView
        android:id="@+id/lblTellUsMore"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Tell us more about you"
        android:textAllCaps="true"
        android:layout_below="@+id/lblStep2"
        android:textSize="@dimen/xlarge_text"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/app_margin"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:text="cancel"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_below="@+id/lblTellUsMore"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:hint="FULL NAME"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:background="@drawable/retangle_white_border"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:hint="USER NAME"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:background="@drawable/retangle_white_border"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:hint="EMAIL"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:background="@drawable/retangle_white_border"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:hint="PASSWORD"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:background="@drawable/retangle_white_border"
            />
        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text"
            android:text="Country"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionNext"
            android:inputType=""
            android:background="@drawable/retangle_white_border"
            />
        <EditText
            android:id="@+id/txtMobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:hint="MOBILE"
            android:text="+961"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:background="@drawable/retangle_white_border"
            />
        <TextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/app_margin"
            android:textColor="@color/white"
            android:text="GENDER"
            android:textSize="@dimen/large_text"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            android:imeOptions="actionNext"
            android:inputType=""
            android:background="@drawable/retangle_white_border"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:textColor="@color/appBlue"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:text="Continue"
        android:gravity="center|left"
        android:paddingLeft="@dimen/app_margin"
        android:textSize="@dimen/xlarge_text"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:textColor="@color/white"
        android:text="go back"
        android:textSize="@dimen/large_text"
        android:gravity="center|left"
        android:textAllCaps="true"
        />


</RelativeLayout>