<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue">

    <TextView
        android:id="@+id/lblStep2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:text="Step 2"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text" />

    <TextView
        android:id="@+id/lblTellUsMore"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblStep2"
        android:layout_marginLeft="@dimen/app_margin"
        android:text="Tell us more about you"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/xlarge_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@android:color/transparent"
        android:text="cancel"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lblTellUsMore"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtFullname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border"
            android:hint="FULL NAME"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:textCursorDrawable="@color/white"
            android:padding="@dimen/app_margin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@color/white"
            android:background="@drawable/retangle_white_border"
            android:hint="USERNAME"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:padding="@dimen/app_margin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border"
            android:hint="EMAIL"
            android:textCursorDrawable="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:padding="@dimen/app_margin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border"
            android:hint="PASSWORD"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textCursorDrawable="@color/white"
            android:padding="@dimen/app_margin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border"
            android:clickable="true"
            android:imeOptions="actionNext"
            android:inputType=""
            android:padding="@dimen/app_margin"
            android:hint="COUNTRY"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/large_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPhoneCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/retangle_white_border"
                android:gravity="center|left"
                android:paddingLeft="@dimen/app_margin"
                android:paddingRight="@dimen/app_margin"
                android:text="+961"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/medium_text"
                android:hint="CODE"/>

            <EditText
                android:id="@+id/txtMobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="MOBILE"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textCursorDrawable="@color/white"
                android:padding="@dimen/app_margin"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/retangle_white_border">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:gravity="left|center"
                android:text="MALE"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text"
                app:ms_background_color="@android:color/transparent" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/appBlue"
            android:textAllCaps="true"
            android:textSize="@dimen/large_text"
            android:text="continue"
            android:layout_marginLeft="@dimen/app_margin"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logout_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin"
            android:tint="@color/appBlue"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:gravity="center|left"
        android:text="go back"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text" />


</RelativeLayout>